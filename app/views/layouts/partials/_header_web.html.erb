                        <li class="page_menu_item has-children">
                          <a href="<%= product_types_path(sub_category: sub_category.id)%>" style="float:left; width: 75%"><%= sub_category.name %></a><i class="fa fa-angle-down mbl_cls_li" style="float: right;
