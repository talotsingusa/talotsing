<!--              <li class="page_menu_item"><a href="contact.html">contact<i class="fa fa-angle-down"></i></a></li>-->
            </ul>

            <div class="menu_contact">
              <div class="menu_contact_item"><div class="menu_contact_icon"><img src="/assets/phone_white.png" alt=""></div>+16266150262</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</header>


<style>
  .header_search_input{
    height: 50px;
  }
  #break_line{
    display: block;
    color: black;
    margin-top: 0.5em;
    border-top: 1px solid #090909;
    margin-bottom: 0.5em;
    margin-left: auto;
    margin-right: auto;
    border-style: inset;
    border-width: 1px;
  }
  .main_nav_dropdown li a {
    color: #000000;
  }
  @media only screen and (max-width: 767px){
    .main_nav_content{
      background-color: #232f3e;
    }
    .custom_dropdown_placeholder {
      font-size: 12px;
    }
    .custom_list li {
      font-size: 8px
    }
  }
</style>
<script>
    $(document).on("click", "#category_search_params li a", function() {
        $("#search_category").val($(this).data("value"));
        console.log($("#search_category").val());
    });
    var acc = document.getElementsByClassName("mbl_cls_li");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function() {
            this.classList.toggle("active");
            var mbl_panel = $(this).next('ul.page_menu_selection');
            if(mbl_panel.hasClass('active'))
              {
                  mbl_panel.toggleClass('active');
                  TweenMax.to(mbl_panel, 0.3, {height:0});
              }
              else
              {
                  mbl_panel.toggleClass('active');
                  TweenMax.set(mbl_panel, {height:"auto"});
                  TweenMax.from(mbl_panel, 0.3, {height:0});
              }
        });
    }
    function click_menu() {
        $(".menu_trigger").click();
    }
    $("#mobile_search").keypress(function(event) {
        if (event.which == 13) {
            event.preventDefault();
            $("#mobile_form").submit();
        }
    });
</script>
