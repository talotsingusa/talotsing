<header class="header">

  <!-- Top Bar -->

  <div class="top_bar">
    <div class="container">
      <div class="row">
        <div class="col d-flex flex-row">
          <div class="top_bar_contact_item"><div class="top_bar_icon"><img src="/assets/phone.png" alt=""></div>+16266150262</div>
          <div class="top_bar_content ml-auto">
            <div class="top_bar_user">
              <% if current_user.present? %>
                  <div class="user_icon"><img src="/assets/user.svg" alt=""></div>
                  <div><%= current_user.full_name %></div>
                  <div><a href="<%= dashboards_path%>">Dashboard</a></div>
              <% else %>
                  <div class="user_icon"><img src="/assets/user.svg" alt=""></div>
                  <div><a href="<%= new_user_registration_path %>">Register</a></div>
                  <div><a href="<%= user_session_path %>">Sign in</a></div>
              <% end %>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Header Main -->

  <div class="header_main" style="background-color: #232f3e;">
    <span style="font-size:20px;cursor:pointer; color: white;" onclick="openNav()" class="mobile-nav">&#9776;Shop</span>
    <div class="container">
      <div class="row">
        <!-- Logo -->
        <div class="col-lg-2 col-sm-3 col-3 order-1">
          <div class="logo_container">
            <div class="logo"><a href="<%= root_path %>"><img src="/assets/logoo 3.png"></a></div>
          </div>
        </div>
        <!-- Search -->
        <div class="col-lg-6 col-12 order-lg-2 order-3 text-lg-left text-right">
          <div class="header_search d-block" >
            <div class="header_search_content">
              <div class="header_search_form_container">
                <%= form_for :search_product, url: shop_path, class: "header_search_form clearfix", method: :get do |f| %>
                <!--<form action="#" class="header_search_form clearfix">-->
                    <%= f.text_field :keyword, class: "header_search_input", required: false, placeholder: "Search for products..." %>
                    <%= f.hidden_field :category, id: "search_category" %>
                  <!--<input type="search" required="required" class="header_search_input" placeholder="Search for products...">-->
                  <div class="custom_dropdown" style="background-color: white;">
                    <div class="custom_dropdown_list">
                      <span class="custom_dropdown_placeholder clc">All Categories</span>
                      <i class="fas fa-chevron-down"></i>
                      <ul class="custom_list clc" id="category_search_params">
                        <% Category.where(see_all:false).each do |category| %>
                        <%= link_to  sub_categories_path(category: category.id) do %>
                        <li> <%= category.name %> </li>
                        <% end %>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                  <button type="submit" class="header_search_button trans_300" value="Submit" style="background-color: #febd69;"><img src="/assets/search.png" alt=""></button>
                <% end %>
              </div>
            </div>
          </div>
          <div class="row float-right d-lg-none mt-2">
            <a href="https://www.messenger.com/t/473678129767681" target="_blank" style="color:white;"> Live Support</a>
          </div>
        </div>
        <!-- Wishlist -->
        <div class="col-lg-4 col-9 order-lg-3 order-2 text-lg-left text-right">
          <div class="wishlist_cart d-flex flex-row align-items-center justify-content-end">
            <div class="wishlist d-flex flex-row align-items-center justify-content-end">
              <a href="<%= my_favorites_path %>"><div class="wishlist_icon"><img src="/assets/heart.png" alt=""></div></a>
              <div class="wishlist_content">
                <div class="wishlist_text"><a href="<%= my_favorites_path %>" style="    color: #ffffff;">My Favorites</a></div>
                <% if !session[:favorites].nil? %>
                <div class="wishlist_count" style="color: #ffffff;"><%= session[:favorites].count if !session[:favorites].nil? %></div>
                <% elsif current_user.present? %>
                    <div class="wishlist_count" style="color: #ffffff;"><%= current_user.user_favorites.count if current_user.user_favorites.present? %></div>
                <% end %>
              </div>
            </div>

            <!-- Cart -->
            <a href="<%= checkout_shopping_carts_path %>">
              <div class="cart">
                <div class="cart_container d-flex flex-row align-items-center justify-content-end">
                  <div class="cart_icon">
                    <img src="/assets/cart.png" alt="">
                    <% if !session[:shop_cart].nil? %>
                      <div class="cart_count" style="background-color: #febd69; "><span style="color: black;"><%= session[:shop_cart].count if !session[:shop_cart].nil? %></span></div>
                    <% elsif current_user.present? %>
                      <div class="cart_count" style="background-color: #febd69; "><span style="color: black;"><%= current_user.orders.where(status: "pending").last.order_items.size if current_user.orders.where(status: "pending").present? %></span></div>
                    <% end %>
                  </div>
                  <div class="cart_content">
                    <% if current_user.present? && current_user.orders.where(status: "pending").present? %>
                      <div class="cart_text"><a href="<%= checkout_shopping_carts_path %>" style="    color: #ffffff;">Cart</a></div>
                      <div class="cart_price" style="color: #ffffff;"><%= number_to_currency(cart_total) %></div>
                    <% elsif !session[:shop_cart].nil? %>
                      <div class="cart_text"><a  href="<%= checkout_shopping_carts_path %>" style=" color: #ffffff;">Cart</a></div>
                      <div class="cart_price" style="color: #ffffff;"><%= number_to_currency(cart_total) if !session[:shop_cart].nil? %></div>
                    <% else %>
                      <div class="cart_text"><a  style="    color: #ffffff;">Cart</a></div>
                      <div class="cart_price" style="color: #ffffff;">$0</div>
                    <% end %>
                  </div>
                </div>

              </div>
            </a>

          </div>

        </div>
      </div>
    </div>
  </div>
  <%= render 'layouts/mobile_side_nav_bar' %>

  <!-- Main Navigation -->

  <nav class="main_nav navbar-expand">
    <div class="container">
      <div class="row">
        <div class="col">

          <div class="main_nav_content d-flex flex-row">

            <!-- Categories Menu -->

            <div class="cat_menu_container" style="background-color: #232f3e;">
              <% if mobile? %>
                <!---- Mobile NAV Bar ----->
                <div class="cat_menu_title d-flex flex-row align-items-center justify-content-start" onclick="click_menu();">
                </div>
                <% else %>
                  <div class="cat_menu_title d-flex flex-row align-items-center justify-content-start">
                    <div class="cat_menu_text d-none d-sm-block">Departments</div>
                  </div>
                  <ul class="cat_menu">
                  <!--<li><a href="#">Computers & Laptops <i class="fas fa-chevron-right ml-auto"></i></a></li>-->
                  <!--<li><a href="#">Cameras & Photos<i class="fas fa-chevron-right"></i></a></li>-->
