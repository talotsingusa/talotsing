<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-md-12">
              <div class="overview-wrap">
                <h2 class="title-1">Brands</h2>
                <%= link_to add_brand_path, class: "au-btn au-btn-icon au-btn--blue" do  %>
                    <i class="zmdi zmdi-plus"></i>add brand
                <% end %>
              </div>
            </div>
          </div>
          <br>
          <div class="table-responsive table--no-card m-b-30">
            <table class="table table-borderless table-striped table-earning" id="brands_list">
              <thead>
              <tr>
                <th>ID</th>
                <th>name</th>
                <th>Vendor Name</th>
                <th>Vendor Email</th>
                <th>Vendor Number</th>
                <th class="text-right">Image</th>
                <th class="text-right">Created at</th>
              </tr>
              </thead>
              <tbody>
              <% @brands.all.each do |brand| %>
              <tr>
                <td><%= brand.id %></td>
                <td><%= brand.name %></td>
                <td><%= brand.vendor_name %></td>
                <td><%= brand.vendor_email %></td>
                <td><%= brand.vendor_number %></td>
                <td><%= image_tag brand.logo.url(:medium) %></td>
                <td class="text-right"><%= brand.created_at %></td>
              </tr>
                  <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
    $( document ).ready(function() {
        $("#brands_list").dataTable();
    });
</script>