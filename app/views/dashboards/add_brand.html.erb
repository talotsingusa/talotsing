<div class="main-content">
<div class="col-lg-12">
  <div class="card">
    <div class="card-header">
      <strong>Add</strong> Brand
    </div>
    <div class="card-body card-block">
      <%= form_for(Brand.new, url: create_brand_path, multipart: true, class: "form-horizontal") do |f| %>
        <div class="row form-group">
          <div class="col col-md-3">
            <label for="text-input" class=" form-control-label">Brand Name</label>
          </div>
          <div class="col-12 col-md-9">
            <%= f.text_field :name, class: "form-control", id: "text-input", required: true %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col col-md-3">
            <label for="text-input" class=" form-control-label">Vendor Name</label>
          </div>
          <div class="col-12 col-md-9">
            <%= f.text_field :vendor_name, class: "form-control", id: "text-input" %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col col-md-3">
            <label for="text-input" class=" form-control-label">Vendor Email</label>
          </div>
          <div class="col-12 col-md-9">
            <%= f.text_field :vendor_email, class: "form-control", id: "text-input" %>
          </div>
        </div>
        <div class="row form-group">
          <div class="col col-md-3">
            <label for="text-input" class=" form-control-label">Vendor Number</label>
          </div>
          <div class="col-12 col-md-9">
            <%= f.text_field :vendor_number, class: "form-control", id: "text-input" %>
          </div>
        </div>

        <div class="row form-group">
          <div class="col col-md-3">
            <label for="file-input" class=" form-control-label">File input</label>
          </div>
          <div class="col-12 col-md-9">
            <%= f.file_field :logo, id: "file-input", class: "form-control-file" %>
          </div>
        </div>
          <%= f.submit 'Submit', class: "btn btn-primary btn-sm" %>
      <% end %>
    </div>
  </div>

</div>
</div>