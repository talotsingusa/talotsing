<div class="main-content">
  <div class="section__content section__content--p30">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-md-12">
              <div class="overview-wrap">
                <h2 class="title-1">Product Types</h2>
                <%= link_to add_product_type_path, class: "au-btn au-btn-icon au-btn--blue" do  %>
                    <i class="zmdi zmdi-plus"></i>Add Product Types
                <% end %>
              </div>
            </div>
          </div>
          <br>
          <div class="table-responsive table--no-card m-b-30">
            <table class="table table-borderless table-striped table-earning" id="product_type_list">
              <thead>
              <tr>
                <th>ID</th>
                <th>name</th>
                <th class="text-right">Sub Category</th>
                <th class="text-right">Image</th>
                <th class="text-right">Created at</th>
              </tr>
              </thead>
              <tbody>
              <% @product_types.all.each do |product_type| %>
                  <tr>
                    <td><%= product_type.id %></td>
                    <td><%= product_type.name %></td>
                    <td><%= product_type.sub_category.name %></td>
                    <td><%= image_tag product_type.image.url(:medium) %></td>
                    <td class="text-right"><%= product_type.created_at %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
    $( document ).ready(function() {
        $("#product_type_list").dataTable();
    });
</script>