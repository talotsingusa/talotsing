<div class="main-content">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <strong>Add</strong> Shipping Price
      </div>
      <div class="card-body card-block">
        <%= form_for(ShippingPrice.new, url: create_shipping_price_path, method: :post, class: "form-horizontal") do |f| %>
          <div class="row form-group">
            <div class="col col-md-3">
              <label for="text-input" class=" form-control-label">Shipping Name</label>
            </div>

            <div class="col-12 col-md-9">
              <%= f.text_field :name, class: "form-control", id: "text-input", required: true %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col col-md-3">
              <label for="select" class=" form-control-label">Shipping Price</label>
            </div>
            <div class="col-12 col-md-9">
              <%= f.text_field :price, class: "form-control", id: "text-input", required: true %>
            </div>
          </div>
          </div>
          <%= f.submit 'Submit', class: "btn btn-primary btn-sm", id: "submit_store" %>
        <% end %>
        </div>
  </div>

</div>
</div>
