<div class="main-content">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <strong>Add</strong> Store
      </div>
      <div class="card-body card-block">
        <%= form_for(Store.new, url: create_store_path, multipart: true, class: "form-horizontal") do |f| %>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="text-input" class=" form-control-label">Store Name</label>
              </div>
              <%= f.hidden_field :user_id, value: current_user.id, class: "form-control", id: "text-input" %>
              <div class="col-12 col-md-9">
                <%= f.text_field :name, class: "form-control", id: "text-input" %>
              </div>
            </div>
            <div class="row form-group">
              <div class="col col-md-3">
                <label for="select" class=" form-control-label">Store description</label>
              </div>
              <div class="col-12 col-md-9">
                <%= f.text_area :description, class: "form-control", id: "text-input" %>
              </div>
            </div>
            </div>
            <%= f.submit 'Submit', class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
    </div>

  </div>
</div>