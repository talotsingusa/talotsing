<div class="main-content">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-header">
        <strong>Add</strong> Product Type
      </div>
      <div class="card-body card-block">
        <%= form_for [:dashboard, product_type], multipart: true, class: "form-horizontal" do |f| %>
          <div class="row form-group">
            <div class="col col-md-3">
              <label for="text-input" class=" form-control-label">Product Type Name</label>
            </div>
            <div class="col-12 col-md-9">
              <%= f.text_field :name, class: "form-control", id: "text-input", required: true %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col col-md-3">
              <label for="select" class=" form-control-label">Select SubCategory</label>
            </div>
            <div class="col-12 col-md-9">
              <%= f.grouped_collection_select :sub_category_id, Category.all, :sub_categories, :name, :id, :name,{ prompt: true }, class: "form-control",
              label:false %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col col-md-3">
              <label for="select" class=" form-control-label">Select Parent Product Type</label>
            </div>
            <div class="col-12 col-md-9">
              <%= f.grouped_collection_select :parent_product_type_id, SubCategory.all, :product_types, :name, :id, :name, { prompt: true }, class: "form-control",label: false %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col col-md-3">
              <label for="file-input" class=" form-control-label">File input</label>
            </div>
            <div class="col-12 col-md-9">
              <%= f.file_field :image, id: "file-input", class: "form-control-file" %>
            </div>
          </div>
          <div class="row form-group">
            <div class="col col-md-3">
              <label for="text-input" class=" form-control-label">See All</label>
            </div>
            <div class="col-12 col-md-9">
              <%= f.check_box :see_all %>
            </div>
          </div>
          <%= f.submit 'Submit', class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
